@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://code.jquery.com/ui/1.12.0-rc.2/themes/smoothness/jquery-ui.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/jqgrid/4.6.0/css/ui.jqgrid.css" rel="stylesheet" />

@section scripts{
    <script src="https://cdn.jsdelivr.net/jqgrid/4.6.0/i18n/grid.locale-en.js"></script>
    <script src="https://cdn.jsdelivr.net/jqgrid/4.6.0/jquery.jqGrid.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0-rc.2/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Admin.js"></script>

    <script type="text/javascript">
        var getCandidateList = '@Url.Action("GetCandidateList", "Admin")';

        $(document).ready(function () {
            adminDetails.initializeAdminSearch(getCandidateList);
        });
    </script>
}

<h3>Candidate - Search</h3>

<div class="formContainer" style="margin-top: 10px">
    <div class="row">
        <div class="col col-sm-2">
            <ul class="nav nav-tabs nav-stacked text-center" role="tablist">
                <li role="presentation" class="active">@Html.ActionLink("Home", "Index", "Admin")</li>
                <li role="presentation">@Html.ActionLink("Request", "Index", "Request")</li>
            </ul>
        </div>
        <div class="col col-sm-8">
            <div class="row tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="personalInfo">
                    <div class="content">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="fieldRow">
                                    <span class="fieldCell oneCol">
                                        <label for="Name">Name</label>
                                        @Html.TextBox("Name", "", new { id = "txtName", style = "width: 150px" })
                                    </span>
                                    <span class="fieldCell oneCol">
                                        <label for="Email">Email Address</label>
                                        @Html.TextBox("Email", "", new { id = "txtEmail", style = "width: 150px" })
                                    </span>
                                    <span class="fieldCell twoCol">
                                        <label for="Date">Date Range</label>
                                        @Html.TextBox("FromDate", "", new { id = "txtFromDate", type = "date", style = "width: 150px" })
                                        @Html.TextBox("ToDate", "", new { id = "txtToDate", type = "date", style = "width: 150px" })
                                    </span>
                                    <input id="btnSearch" value="Search" class="btn btn-click" />
                                </div>
                                <br />
                                <br />
                                <div class="fieldRow">
                                    <table id="jqGrid"></table>
                                    <div id="jqGridPager"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-sm-2"></div>
    </div>
</div>
